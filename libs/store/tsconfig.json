{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "../../dist/store",
    "sourceMap": true,
    "inlineSources": true,
    "target": "es2015"
  },
  "files": ["public_api.ts"],
  "include": ["**/*.ts"],
  "angularCompilerOptions": {
    "annotateForClosureCompiler": true,
    "strictMetadataEmit": true,
    "flatModuleOutFile": "index.js",
    "flatModuleId": "@ngrx-utils/store"
  }
}
