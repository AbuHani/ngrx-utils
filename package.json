{
  "name": "@ngrx-utils/platform",
  "version": "0.6.1",
  "description": "Monorepo for ngrx development utilities",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "precommit": "lint-staged",
    "clean": "git clean -xdf && yarn && yarn run bootstrap",
    "build": "ts-node ./build/index.ts",
    "release": "yarn changelog && npm run build",
    "release:publish": "npm run build && lerna publish --conventional-commits --git-remote upstream",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "git:commit": "git-cz",
    "test": "lerna run --parallel test && jest",
    "deploy:builds": "yarn build && concurrently 'yarn run example:build:prod' 'ts-node build/deploy-build'",
    "ci": "yarn run test && yarn run deploy:builds",
    "changelog": "standard-version",
    "cli": "ng",
    "copy:dist": "ncp dist/ ./node_modules/@ngrx-utils/",
    "example:start": "yarn run cli serve",
    "example:start:aot": "yarn run cli serve -prod",
    "example:test": "jest --watch",
    "example:build:prod": "yarn run copy:dist && yarn cli build -prod --base-href \"/platform/example-app/\" --output-path \"./dist/example-app\""
  },
  "dependencies": {
    "rxjs": "^5.5.6"
  },
  "devDependencies": {
    "@angular/animations": "^5.2.4",
    "@angular/cdk": "^5.2.0",
    "@angular/cli": "^1.6.8",
    "@angular/common": "^5.2.4",
    "@angular/compiler": "^5.2.4",
    "@angular/compiler-cli": "^5.2.4",
    "@angular/core": "^5.2.4",
    "@angular/forms": "^5.2.4",
    "@angular/language-service": "^5.2.4",
    "@angular/material": "^5.2.0",
    "@angular/platform-browser": "^5.2.4",
    "@angular/platform-browser-dynamic": "^5.2.4",
    "@angular/router": "^5.2.4",
    "@commitlint/cli": "^6.1.0",
    "@commitlint/config-conventional": "^6.1.0",
    "@commitlint/prompt-cli": "^6.1.0",
    "@ngrx/db": "^2.1.0",
    "@ngrx/effects": "^5.0.1",
    "@ngrx/entity": "^5.0.1",
    "@ngrx/router-store": "^5.0.1",
    "@ngrx/store": "^5.0.0",
    "@ngrx/store-devtools": "^5.0.1",
    "@types/fs-extra": "^5.0.0",
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.102",
    "@types/node": "^9.4.2",
    "@types/ora": "^1.3.1",
    "@types/prettier": "^1.10.0",
    "@types/rimraf": "^2.0.2",
    "caporal": "^0.9.0",
    "chalk": "^2.3.0",
    "commitizen": "^2.9.6",
    "concurrently": "^3.5.1",
    "cpy-cli": "^1.0.1",
    "cz-conventional-changelog": "^2.1.0",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "hammerjs": "^2.0.8",
    "husky": "^0.14.3",
    "jasmine-marbles": "^0.2.0",
    "jest": "^22.2.1",
    "jest-preset-angular": "^5.0.0",
    "lerna": "^2.8.0",
    "lint-staged": "^6.1.0",
    "lodash": "^4.17.5",
    "ncp": "^2.0.0",
    "ngrx-store-freeze": "^0.2.1",
    "ora": "^1.4.0",
    "prettier": "^1.10.2",
    "pretty-format": "^22.1.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.3",
    "sorcery": "^0.10.0",
    "standard-version": "^4.3.0",
    "ts-jest": "^22.0.3",
    "ts-node": "^4.1.0",
    "tslib": "^1.8.1",
    "tslint": "^5.9.1",
    "typescript": "~2.6.2",
    "uglify-js": "^3.3.9",
    "zone.js": "^0.8.20"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "lint-staged": {
    "*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "license": "MIT",
  "keywords": [
    "ngrx",
    "angular",
    "rxjs",
    "ngrx-utils"
  ],
  "engines": {
    "node": ">=8.6.0",
    "npm": ">=5.3.0",
    "yarn": ">=1.3.0 <2.0.0"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/setupJest.ts",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "example-app/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    },
    "transform": {
      "^.+\\.(ts|js|html)$": "<rootDir>/node_modules/jest-preset-angular/preprocessor.js"
    },
    "testMatch": [
      "<rootDir>/example-app/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "html",
      "json"
    ],
    "mapCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/modules/*.*/"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "moduleNameMapper": {
      "^@ngrx-utils/(?!db)(.*)": "<rootDir>/modules/$1"
    },
    "modulePathIgnorePatterns": [
      "dist"
    ]
  }
}
