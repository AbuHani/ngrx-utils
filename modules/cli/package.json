{
  "$schema": "../../node_modules/ng-packagr/package.schema.json",
  "name": "@ngrx-utils/cli",
  "version": "0.1.1",
  "description": "NgRx CLI to help scaffold your app state management and update it as your app scale",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngrx-utils/ngrx-utils.git"
  },
  "keywords": [
    "NgRx",
    "Angular",
    "CLI"
  ],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngrx-utils/ngrx-utils/issues"
  },
  "homepage": "https://github.com/ngrx-utils/ngrx-utils#readme",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "ngrx": "bin/ngrx.js"
  },
  "dependencies": {
    "caporal": "^0.9.0",
    "chalk": "^2.3.0",
    "lodash.camelcase": "latest",
    "lodash.upperfirst": "latest",
    "prettier": "^1.10.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "spec/tsconfig.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/spec/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ]
  },
  "files": [
    "dist/**/*"
  ]
}
