{
  "name": "@ngrx-utils/cli",
  "version": "0.5.0",
  "description": "NgRx CLI to help scaffold your app state management and update it as your app scale",
  "module": "@ngrx-utils/cli.es5.js",
  "es2015": "@ngrx-utils/cli.js",
  "main": "bundles/cli.umd.js",
  "typings": "cli.d.ts",
  "scripts": {
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngrx-utils/ngrx-utils.git"
  },
  "keywords": [
    "NgRx",
    "Angular",
    "CLI"
  ],
  "author": "San Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ngrx-utils/ngrx-utils/issues"
  },
  "homepage": "https://github.com/ngrx-utils/ngrx-utils#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "release"
  ],
  "bin": {
    "ngrx": "bin/ngrx"
  },
  "dependencies": {
    "caporal": "^0.9.0",
    "chalk": "^2.3.0",
    "lodash": "^4.17.4",
    "prettier": "^1.10.2"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfigFile": "spec/tsconfig.spec.json"
      }
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/spec/**/*.spec.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!@ngrx)"
    ],
    "modulePathIgnorePatterns": [
      "dist"
    ]
  }
}
